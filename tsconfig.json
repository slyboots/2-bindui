{
    "compilerOptions": {
        "module": "commonjs",
        "alwaysStrict": true,
        "diagnostics": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "listEmittedFiles": true,
        "declaration": true,
        "declarationDir": "types",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016"
        ],
        "traceResolution": true,
        "listFiles": true
    },
    "include": [
        "src/*",
        "src/lib/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "dist",
        "webpack.config.ts"
    ]
}